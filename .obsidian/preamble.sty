% lowercase shorthands for greek letters, symbols, and a few operators
\newcommand{a}{\alpha}
\newcommand{b}{\beta}
\newcommand{c}{\gamma}
\newcommand{d}{\delta}
\newcommand{s}{\sigma}
\newcommand{w}{\omega}
\newcommand{x}{\times}

\newcommand{i}[1][1]{^{-#1}} 

\newcommand{h}{\hat}
\newcommand{t}{\tilde}

% convenient pairs
\newcommand{abs}[1]{\lvert #1 \rvert}
\newcommand{angle}[1]{\langle #1 \rangle}
\newcommand{ceil}[1]{\lceil #1 \rceil}
\newcommand{floor}[1]{\lfloor #1 \rfloor}
\newcommand{norm}[1]{\lVert #1 \rVert}

\newcommand{bpar}[1]{\big ( #1 \big )}
\newcommand{bcur}[1]{\big \{ #1 \big \}}
\newcommand{bsq}[1]{\big [ #1 \big ]}
\newcommand{Bpar}[1]{\Big ( #1 \Big )}
\newcommand{Bcur}[1]{\Big \{ #1 \Big \}}
\newcommand{Bsq}[1]{\Big [ #1 \Big ]}

% capitals letters shorthand, mostly mathbb; option to overwrite default empty with superscript
\newcommand{B}[1][\ ]{\{0,1\}^{#1}}
\newcommand{C}[1][\ ]{\mathbb C^{#1}}
\newcommand{F}[1][\ ]{\mathbb F^{#1}}
\newcommand{G}[1][\ ]{\mathbb G^{#1}}
\newcommand{N}[1][\ ]{\mathbb N^{#1}}
\newcommand{Q}[1][\ ]{\mathbb Q^{#1}}
\newcommand{R}[1][\ ]{\mathbb R^{#1}}
\newcommand{Z}[1][\ ]{\mathbb Z^{#1}}

% greek adjustments
\newcommand{phi}{\varphi}
\newcommand{eps}{\varepsilon}

% convenient shorthand for script fonts. 
% Overlaps with quick-latex-for-obsidian space-shortcut functionality.
% e.g. the unwanted default behavior: $\bb affects the rest of the line$
% desired behavior: $\bb {just this} not this$
\newcommand{bb}[1]{\mathbb #1}
\newcommand{cal}[1]{\mathcal #1}
\newcommand{frak}[1]{\mathfrak #1}
\newcommand{sf}[1]{\mathsf #1}
\newcommand{scr}[1]{\mathscr #1}
\newcommand{sf}[1]{\mathsf #1}

% logic
\newcommand{xor}{\oplus}

% probability
\newcommand{binomialsum}[3][n]{\sum\limits_{i=0}^{#1} {#1 \choose i}#2^i #3^{#1-i}}

% calculus
\newcommand{limty}[1]{\lim_{#1 \to\infty}}

% misc operators
\newcommand{null}{\mathsf{null}}
\newcommand{upar}[2]{#1^{(#2)}}
\newcommand{dpar}[2]{#1_{(#2)}}

